<%= simple_form_for(@location) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :body %>


    <%= f.collection_select :parent_id, Location.arrange_as_array({:order => 'name'}, @location.possible_parents) , :id, :name_for_selects, :include_blank => true %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
